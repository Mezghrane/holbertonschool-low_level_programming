#include <stdlib.h>
#include <time.h>
#include <stdio.h>

/**
 * main - Entry point
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	printf("Number: %d is ", n);
	if (n > 0)
		printf("Number: %d is ", n);
		printf("positive\n");
	else if (n < 0)
		printf("Number: %d is ", n);
		printf("negative\n");
	else if
printf("zero\n");
	return (0);
}
